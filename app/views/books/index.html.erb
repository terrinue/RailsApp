<div>
	<%=form_tag:search_books,method: :get,class: "search" do %>
	<%=text_field_tag "q", params[:q] %>
	<%=submit_tag "検索",class:"form-btn" %>
	<% end %>
</div>

<div class="toolbar"><%=link_to "書籍の新規登録",:new_book %></div>
<p>書籍一覧</p>
<% if @books.present? %>
	<table class = "list">
		<thead>
			<tr>
				<th>書籍タイトル</th>
				<th>著者</th>
				<th>出版社</th>
				<th>価格</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%=link_to book.book_title,book %></td>
					<td><%= book.writer %></td>
					<td><%= book.company %></td>
					<td><%= book.price %></td>
					<td><%=link_to "編集",[:edit,book] %>|<%=link_to "削除",book,method: :delete,data:{ confirm:"本当に削除しますか?"} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>本が登録されておりません。</p>
<% end %>
